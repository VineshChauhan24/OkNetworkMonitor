<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Timeout Warning"
        app:iconSpaceReserved="false"
        app:summary="Notification will be displayed when action timeout.">

        <ListPreference
            app:key="wholeRequest"
            app:allowDividerAbove="true"
            app:title="Whole Request timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="dns"
            app:title="DNS timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="secureConnect"
            app:title="SecureConnect timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="connect"
            app:title="Connect timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="requestHeaders"
            app:title="Request headers timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="requestBody"
            app:title="Request body timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />


        <ListPreference
            app:key="responseHeaders"
            app:title="Response headers timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="responseBody"
            app:title="Response body timeout warning"
            app:iconSpaceReserved="false"
            app:entryValues="@array/timeout_ms_value"
            app:entries="@array/timeout_ms"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>